<style>


</style>

<h1>Listing orders</h1>



<p id="notice"><%= notice  %></p>

<% if !@orders.nil? %>
    <table>
      <thead>
      <tr>
        <th>User_ID</th>
        <th>Supply_ID</th>
        <th>Count</th>
        <th>Total price</th>
        <th>Delivery date</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @orders.each do |order| %>
          <tr>
            <td><%= order.user_id %></td>
            <td><%= order.supply_id %></td>
            <td><%= order.count %></td>
            <td><%= order.total %></td>
            <td><%= order.deliveryDate %></td>
            <td><%= order.status %></td>
            <td><%= link_to 'Show', order %></td>
            <td><%= link_to 'Edit', edit_order_path(order) %></td>
            <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<br>