<h2>Editing order</h2>
<%= form_for(@order) do |f| %>
    <p>
      <strong>Order ID:</strong>
      <%= @order.id %>
    </p>
    <p>
      <strong>User ID:</strong>
      <%= @order.user_id %>
    </p>
    <p>
      <strong>Supply ID:</strong>
      <%= @order.supply_id %>
    </p>
    <p>
      <strong>Count:</strong>
      <%= @order.count %>
    </p>
    <p>
      <strong>Total:</strong>
      <%= @order.total %>
    </p>
    <%= f.select(:status, ['Pending', 'Ready']) %>



    <div class="actions">
      <%= f.submit 'Update' %>
    </div>
<% end %>