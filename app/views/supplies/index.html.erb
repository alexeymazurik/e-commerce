
<% if user_signed_in? %>
	<span>Hello, <%= current_user.email%></span>
	<%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
<% end %>

<span>Admin: <%= current_user.admin? %></span>

<h1>Listing supplies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
	  <% if current_user.admin? %>
		  <th colspan="3"></th>
	  <% end %>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.title %></td>
        <td><%= supply.description %></td>
        <td><%= supply.price %></td>
		<% if current_user.admin? %>
        	<td><%= link_to 'Show', supply %></td>
			<td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        	<td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
	<%= link_to 'New Supply', new_supply_path %>
<% end %>