<h1>Listing supplies</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
	  <% if current_user.admin? %>
		  <th colspan="3"></th>
	  <% end %>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @supplies.each do |supply| %>
      <tr>
        <td><%= supply.id %></td>
        <td><%= supply.title %></td>
        <td><%= supply.description %></td>
        <td><%= supply.price %></td>
		<% if current_user.admin? %>
        	<td><%= link_to 'Show', supply %></td>
			<td><%= link_to 'Edit', edit_supply_path(supply) %></td>
        	<td><%= link_to 'Destroy', supply, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
        <td><%= link_to 'Buy', new_order_path(:supply_id => supply.id)  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.admin? %>
	<%= link_to 'New Supply', new_supply_path %>
<% end %>
<%= link_to 'Show orders', orders_path %>